@charset "UTF-8";

/*global selector*/
* {
	margin: 0;
	padding: 0;
}

/*ID selector*/
#title {
	text-align: center;
	font-family: serif;
	font-size: 1.2em;
	color: #aa1100;
}

.bigBox {
	width: 200px;
	height: 100px;
	border: 2px solid green;
	display: inline-block;
	
}

.bigBox.effect{
	
	
	border-radius: 10px 20px 10px 20px;
	
	display: inline-block;
}

img[alt="book1"]{
	
	width: 100px;
	height: 200px;
	border: 2px solid green;
	
	
}


/* Attribute selector - Stands for containing anywhere other symbol src * and $ */
img[src*="show"]{
	
	width: 100px;
	height: 100px;
	border: 3px solid red;
	
	
}
/* Aside selector represented by "+" symbol */

section+p{
	
	font-size: 1.2em;
	font-weight: bolder;
	color: green
}

/* Adjustant selector represented by ">" symbol */
div>p{
	
	
	font-family: cursive;
	font-weight: bold;
	color: red
}

/* pseudo class */
img:hover {
	
	
	width: 50px;
	height: 50px;
	color: red;
	
	
	
}

/* pseudo element - start ny :: and : */

#first::first-letter {
	
	font-family: cursive;
	font-size: 1.2em;
	color: green;
	
}

/* element selector */

table {
	
	
	border: 1px solid blue;
	border-collapse: collapse;
}



/* group selector */

td,tr,th{
	
	border: 1px solid green;
	
	
}



tr:nth-child(even) {

	
	background-color: yellow;
}

input[type='text']:focus {
	
	font-size: 1.5em;
	border: 5px solid green;
	
}

input[type='checkbox']:checked+label {
	
	font-size: 1.5em;
	border: 5px solid blue;
	
}









