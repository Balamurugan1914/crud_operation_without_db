<script type="text/javascript">

function hidepara(){
	
	var para1 = document.getElementById("p1")
	
	para1.style.display= "none"
		
	var showbtn = document.getElementById("hidebtn")

		showbtn.style.display= "none"

			var showbtn = document.getElementById("showbtn")

			showbtn.style.display= "block"
		
	
}

function showpara(){
	
	var para2 = document.getElementById("p1")
	
	para2.style.display= "block"
	
		
	
}



</script>
</head>
<body>

<button id="hidebtn" onclick="hidepara()" class="btn btn-info">Hide</button>
<button id="showbtn" onclick="showpara()" class="btn btn-info">Show</button>

<p id="p1">

