@charset "UTF-8";

/*global selector*/
* {
	margin: 0;
	padding: 0;
}

/*ID selector*/
#title {
	text-align: center;
	font-family: serif;
	font-size: 1.2em;
	color: #aa1100;
}

.bigBox {
	width: 200px;
	height: 100px;
	border: 2px solid green;
	display: inline-block;
	
}

.bigBox.effect{
	
	
	border-radius: 10px 20px 10px 20px;
	
	display: inline-block;
}

img[alt="book1"]{
	
	width: 100px;
	height: 200px;
	border: 2px solid green;
	
	
}


/* Attribute selector - Stands for containing anywhere other symbol src * and $ */
img[src*="show"]{
	
	width: 100px;
	height: 100px;
	border: 3px solid red;
	
	
}
/* Attribute selector represented by "+" symbol */

section+p{
	
	font-size: 1.2em;
	font-weight: bolder;
	color: green
}

/* Attribute selector represented by ">" symbol */
div>p{
	
	
	font-family: cursive;
	font-weight: bold;
	color: red
}





